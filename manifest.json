{
    "name": "Text Copy",
    "version": "0",
    "description": "Copy all text in a tag",
    "background": {
        "scripts": ["js/background.js"]
    },
    "manifest_version": 2,
    "permissions": [
        "<all_urls>"
    ],
    "browser_action": {
        "name": "Text Copy",
        "icons": ["icon.png"],
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "js": ["js/res/jquery-2.2.0.min.js", "js/content.js"],
        "matches": ["http://*/*", "https://*/*"],
        "persistent": true
    }]
}